<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Vista para la parte superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:background="#FFFFFF" />


        <View
            android:layout_width="match_parent"
            android:layout_height="790dp"
            android:layout_gravity="bottom"
            android:background="#9CDCDBDB" />

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="37dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/arrowleft_modified" />

            <TextView
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="88dp"
                android:background="@drawable/border"
                android:hint="@string/buscar"
                android:paddingLeft="15dp"
                android:paddingTop="6dp"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="38dp"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="44dp"
                android:src="@drawable/canasta_modified" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="99dp"
                android:src="@drawable/x_modified" />

            <TextView
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="128dp"
                android:layout_marginTop="115dp"
                android:background="@drawable/border1"
                android:paddingLeft="20dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Lista"
                android:textColor="#FF9300"
                android:textSize="18sp" />

            <TextView
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="196dp"
                android:layout_marginTop="115dp"
                android:background="@drawable/border2"
                android:paddingLeft="20dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Mapa"
                android:textColor="#EAEAEA"
                android:textSize="18sp" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>